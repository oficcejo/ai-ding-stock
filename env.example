# ================================
# 股票分析系统 Docker 环境变量配置
# ================================

# 时区设置
TZ=Asia/Shanghai

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# API服务端口（宿主机端口）
API_PORT=8080

# Web服务端口（宿主机端口）
WEB_PORT=80

# Docker网络子网
SUBNET=172.20.0.0/16

# 容器内存限制（可选）
# MEMORY_LIMIT=512m

# 容器CPU限制（可选）
# CPU_LIMIT=1.0

# 健康检查间隔（秒）
HEALTHCHECK_INTERVAL=30

# 日志文件配置
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# 构建参数
GOLANG_VERSION=1.24
ALPINE_VERSION=3.19
NGINX_VERSION=1.25

